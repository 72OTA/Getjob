{% extends 'overall/layout' %}
{% block appHeader %}
    <style>
        body {
            background: linear-gradient(rgba(20,20,20, .5), rgba(20,20,20, .5)), url("./views/app/images/bgevent.png");
        }
    </style>
{% endblock %}
{% block appBody %}
    <div class="card card-container">
        <div class="cover-container d-flex h-100 p-3 mx-auto flex-column">
            {% if empresa.datos[0][0] != null %}
                <header class="masthead mb-auto">
                    <div class="inner">
                        <h3 class="masthead-brand text-center">Para crear eventos debes tener una empresa</h3>
                    </div>
                </header>
            {% else %}
                <header class="masthead mb-auto">
                    <div class="inner">
                        <h3 class="masthead-brand text-center">Crear Evento</h3>
                    </div>
                </header>
            {% endif %}

            <main role="main" class="inner cover">
                <h4>
                    <div class="row">
                        <div class="col-md-4"></div>
                        <div class="col-md-4">
                            <form id="crearevento_form">
                                Nombre del evento<input type="text" name="nombreEvento" class="form-control" autofocus="autofocus">
                                <br>
                                Cantidad de trabajadores necesarias<input type="number" name="trabajadoresQ" class="form-control" min="1">
                                <br>
                                Funcion que cumpliran<input type="text" name="func" class="form-control" placeholder="Ej: Guardia, Barman...">
                                <br>
                                Fecha<input type="date" name="fecha" class="form-control" min="{{fecha}}" value="{{fecha}}">
                                <br>
                                <input type="hidden" name="id" id="id" value="{{user.id_user}}">
                                <div class="text-center">
                                    <button type="button" class="btn btn-lg btn-success  btn-signin" id="crearevento">Crear Evento</button>
                                    <a type="button" class="btn btn-lg btn-primary  btn-signin" href="eventos/">Volver</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </h4>
            </main>

        </div>

    </div>
    <script src="views/app/js/eventos/eventos.js"></script>
{% endblock %}
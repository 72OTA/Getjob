{% extends 'overall/layout' %}
{% block appHeader %}
    <style>
        body {
            background: linear-gradient(rgba(20,20,20, .5), rgba(20,20,20, .5)), url("./views/app/images/bgevent.png");
        }
    </style>
{% endblock %}
{% block appBody %}
    <div class="card card-container">
        <div class="cover-container d-flex h-100 p-3 mx-auto flex-column">
            <main role="main" class="inner cover">
                <h4>
                    <div class="row">
                        <div class="col-md-4"></div>
                        <div class="col-md-4">
                            <form id="editarevento_form">
                                Nombre del evento<input type="text" name="nombreEvento" class="form-control" autofocus="autofocus" value="{{ evento.nombre }}">
                                <br>
                                Cantidad de trabajadores necesarias<input type="number" name="trabajadoresQ" class="form-control" min="1" value="{{ evento.trabajadores }}">
                                <br>
                                Funcion que cumpliran<input type="text" name="func" class="form-control" placeholder="Ej: Guardia, Barman..." value="{{ evento.funcion }}">
                                <br>
                                Fecha<input type="date" name="fecha" class="form-control" min="{{fecha}}" value="{{ evento.fecha}}">
                                <br>
                                <input type="hidden" name="id" id="id" value="{{evento.id}}">
                                <div class="text-center">
                                    <button type="button" class="btn btn-lg btn-success  btn-signin" id="editarEvento">Editar Evento</button>
                                    <a type="button" class="btn btn-lg btn-primary  btn-signin" href="eventos/">Volver</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </h4>
            </main>

        </div>

    </div>
    <script src="views/app/js/eventos/eventos.js"></script>

{% endblock %}